---
import { getPath } from '../utils/paths';

interface Props {
  showSafetyNotice?: boolean;
}

const { showSafetyNotice = false } = Astro.props;
---

{showSafetyNotice && (
  <div class="bg-yellow-50 border-t border-yellow-200">
    <div class="max-w-7xl mx-auto py-8 px-4 sm:px-6 lg:px-8">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <i class="fas fa-exclamation-triangle text-yellow-400 text-2xl"></i>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-yellow-800">
            Important Safety Notice
          </h3>
          <div class="mt-2 text-sm text-yellow-700">
            <p>
              This information is for educational purposes only. Always consult with healthcare professionals and follow proper safety protocols.
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
)}

<footer class="bg-gray-900 text-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
      <div class="md:col-span-2">
        <h3 class="text-lg font-semibold mb-4">About</h3>
        <p class="text-gray-400">
          Evidence-based information for performance enhancement, focusing on safety and effectiveness. Our mission is to provide comprehensive, accurate, and up-to-date resources.
        </p>
      </div>
      <div>
        <h3 class="text-lg font-semibold mb-4">Quick Links</h3>
        <ul class="space-y-2">
          <li>
            <a href={getPath("/compounds")} class="text-gray-400 hover:text-white transition-colors">
              Compounds Database
            </a>
          </li>
          <li>
            <a href={getPath("/guides/first-cycle")} class="text-gray-400 hover:text-white transition-colors">
              First Cycle Guide
            </a>
          </li>
          <li>
            <a href={getPath("/safety/bloodwork")} class="text-gray-400 hover:text-white transition-colors">
              Blood Work Guide
            </a>
          </li>
          <li>
            <a href={getPath("/safety/pct")} class="text-gray-400 hover:text-white transition-colors">
              PCT Protocols
            </a>
          </li>
        </ul>
      </div>
      <div>
        <h3 class="text-lg font-semibold mb-4">Resources</h3>
        <ul class="space-y-2">
          <li>
            <a href={getPath("/resources/calculators")} class="text-gray-400 hover:text-white transition-colors">
              Calculators
            </a>
          </li>
          <li>
            <a href={getPath("/resources/studies")} class="text-gray-400 hover:text-white transition-colors">
              Studies
            </a>
          </li>
          <li>
            <a href={getPath("/resources/faq")} class="text-gray-400 hover:text-white transition-colors">
              FAQ
            </a>
          </li>
          <li>
            <a href={getPath("/resources/glossary")} class="text-gray-400 hover:text-white transition-colors">
              Glossary
            </a>
          </li>
        </ul>
      </div>
    </div>
    <div class="mt-8 pt-8 border-t border-gray-800">
      <div class="flex flex-col md:flex-row justify-between items-center">
        <p class="text-gray-400 text-sm">
          For educational purposes only. Use information responsibly.
        </p>
        <div class="mt-4 md:mt-0 flex space-x-6">
          <a
            href={getPath("/privacy")}
            class="text-gray-400 hover:text-white text-sm transition-colors"
          >
            Privacy Policy
          </a>
          <a
            href={getPath("/terms")}
            class="text-gray-400 hover:text-white text-sm transition-colors"
          >
            Terms of Use
          </a>
          <a
            href={getPath("/disclaimer")}
            class="text-gray-400 hover:text-white text-sm transition-colors"
          >
            Disclaimer
          </a>
        </div>
      </div>
    </div>
  </div>
</footer>

<style>
  /* Add smooth transition for hover effects */
  a {
    transition: all 0.2s ease-in-out;
  }

  /* Improve focus visibility */
  a:focus-visible {
    outline: 2px solid #60A5FA;
    outline-offset: 2px;
    border-radius: 2px;
  }
</style>
