---
import Layout from "../layouts/Layout.astro";
import Hero from "../components/Hero.astro";
import Categories from "../components/Categories.astro";

const pageTitle = "PED Knowledge Base";
const pageDescription =
  "Evidence-based information about performance enhancement, compounds, and protocols.";
---

<Layout title={pageTitle} description={pageDescription}>
  <main>
    <Hero />
    <Categories />

    <!-- Additional sections can be added here -->
    <section class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
      <div class="bg-white shadow-lg rounded-lg overflow-hidden">
        <div class="p-8">
          <h2 class="text-2xl font-bold text-gray-900 mb-4">Latest Updates</h2>
          <div class="space-y-4">
            <div class="border-l-4 border-blue-500 pl-4">
              <h3 class="text-lg font-semibold text-gray-900">New Compound Profiles Added</h3>
              <p class="text-gray-600">
                Detailed information about Nandrolone, Trenbolone, and more.
              </p>
            </div>
            <div class="border-l-4 border-green-500 pl-4">
              <h3 class="text-lg font-semibold text-gray-900">Updated Safety Guidelines</h3>
              <p class="text-gray-600">
                New recommendations for blood work frequency and health monitoring.
              </p>
            </div>
            <div class="border-l-4 border-purple-500 pl-4">
              <h3 class="text-lg font-semibold text-gray-900">Interactive Tools</h3>
              <p class="text-gray-600">Try our new cycle planning and dosage calculation tools.</p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <section class="bg-gray-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
        <div class="text-center mb-8">
          <h2 class="text-3xl font-bold text-gray-900">Quick Resources</h2>
          <p class="mt-2 text-lg text-gray-600">
            Essential information for beginners and experienced users
          </p>
        </div>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          <a
            href="/guides/first-cycle"
            class="block hover:transform hover:scale-105 transition-all duration-200"
          >
            <div class="bg-white p-6 rounded-lg shadow-md hover:shadow-xl">
              <div class="text-blue-600 mb-4">
                <i class="fas fa-flag text-2xl"></i>
              </div>
              <h3 class="text-xl font-semibold mb-2">First Cycle Guide</h3>
              <p class="text-gray-600">Complete guide for planning your first cycle safely.</p>
            </div>
          </a>
          <a
            href="/safety/bloodwork"
            class="block hover:transform hover:scale-105 transition-all duration-200"
          >
            <div class="bg-white p-6 rounded-lg shadow-md hover:shadow-xl">
              <div class="text-red-600 mb-4">
                <i class="fas fa-heartbeat text-2xl"></i>
              </div>
              <h3 class="text-xl font-semibold mb-2">Blood Work Guide</h3>
              <p class="text-gray-600">Understanding and interpreting your blood work results.</p>
            </div>
          </a>
          <a
            href="/safety/pct"
            class="block hover:transform hover:scale-105 transition-all duration-200"
          >
            <div class="bg-white p-6 rounded-lg shadow-md hover:shadow-xl">
              <div class="text-green-600 mb-4">
                <i class="fas fa-sync text-2xl"></i>
              </div>
              <h3 class="text-xl font-semibold mb-2">PCT Protocols</h3>
              <p class="text-gray-600">Post-cycle therapy guidelines and protocols.</p>
            </div>
          </a>
        </div>
      </div>
    </section>
  </main>
</Layout>

<style>
  /* Add smooth scroll behavior */
  html {
    scroll-behavior: smooth;
  }

  /* Enhance link hover effects */
  a {
    transition: all 0.2s ease-in-out;
  }

  /* Add subtle hover animation to cards */
  .hover\:transform {
    transition: transform 0.2s ease-in-out;
  }
</style>
